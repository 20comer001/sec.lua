local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MobileInterface"
screenGui.Parent = playerGui

-- Criação do Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.3, 0, 0.5, 0)
mainFrame.Position = UDim2.new(0.05, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.new(0, 0, 0)
mainFrame.BackgroundTransparency = 0.5
mainFrame.Parent = screenGui

-- Criação do Título
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.1, 0)
titleLabel.Text = "Início"
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.BackgroundTransparency = 1
titleLabel.Parent = mainFrame

-- Função Noclip
local function noclip()
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    
    if humanoid then
        humanoid.PlatformStand = true
        for _, part in pairs(character:GetChildren()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end

-- Função Fly
local function fly()
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    
    if humanoid then
        humanoid.PlatformStand = true
        local bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.Velocity = Vector3.new(0, 50, 0)
        bodyVelocity.MaxForce = Vector3.new(0, math.huge, 0)
        bodyVelocity.Parent = character:FindFirstChild("HumanoidRootPart")
        
        -- Para parar de voar, você pode adicionar um evento ou botão para remover o BodyVelocity
    end
end

-- Função Fling
local function fling()
    local character = player.Character or player.CharacterAdded:Wait()
    local target = game.Workspace:FindFirstChild("Target") -- Alvo fictício, substitua conforme necessário
    if target then
        local direction = (target.Position - character.PrimaryPart.Position).unit
        character:FindFirstChild("HumanoidRootPart").Velocity = direction * 100
    end
end

-- Criação dos Botões
local noclipButton = Instance.new("TextButton")
noclipButton.Size = UDim2.new(1, 0, 0.2, 0)
noclipButton.Position = UDim2.new(0, 0, 0.1, 0)
noclipButton.Text = "Noclip"
noclipButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
noclipButton.Parent = mainFrame
noclipButton.MouseButton1Click:Connect(noclip)

local flyButton = Instance.new("TextButton")
flyButton.Size = UDim2.new(1, 0, 0.2, 0)
flyButton.Position = UDim2.new(0, 0, 0.4, 0)
flyButton.Text = "Fly"
flyButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
flyButton.Parent = mainFrame
flyButton.MouseButton1Click:Connect(fly)

local flingButton = Instance.new("TextButton")
flingButton.Size = UDim2.new(1, 0, 0.2, 0)
flingButton.Position = UDim2.new(0, 0, 0.7, 0)
flingButton.Text = "Fling"
flingButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
flingButton.Parent = mainFrame
flingButton.MouseButton1Click :Connect(fling)
